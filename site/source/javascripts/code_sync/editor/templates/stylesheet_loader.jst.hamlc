.form
  .card-view
    .card.menu.active.boom
      - if @packages.length >= 1
        .field
          %label Select a package
          .controls
            %select{:name=>"load_package"}
              %option{:value=>""} Select One
              - for name in @packages.pluck('name')
                %option{:value=>name}
                  #{ name }

      .field
        %label
          Enter a list of stylesheet Urls
        .controls
          %textarea{:name=>"package_text"}
      .action-row
        %a.btn.btn-primary.submit
          Load Resources
        %a.btn.finished
          Cancel

    .card.results
      .field
        %label Package Name
        %input{:type=>"text",:name=>"package_name"}

      %ul.results-container

      .action-row
        %a.btn.btn-primary.save-as-package
          Save As Package
        %a.btn.finished
          Finished
